input[type='checkbox']
  display none
  cursor pointer
  &:focus,
  &:active
    outline none
  & + label
    cursor pointer
    display inline-block
    position relative
    padding-left 25px
    margin-right 10px
    &:before,
    &:after
      content ''
      display inline-block
      width 18px
      height 18px
      left 0
      bottom 0
      text-align center
      position absolute
    &:before
      background-color #e8e8e8
      transition all 0.3s ease-in-out
    &:after
      color #fff
input[type='checkbox']:checked + label:before
  box-shadow inset 0 0 0 10px #e8e8e8


/*Checkbox Specific styles*/
input[type='checkbox'] + label:before
  border-radius 3px

input[type='checkbox'] + label:hover:after,
input[type='checkbox']:checked + label:after
  content "\2713"
  line-height 18px
  font-size 14px
input[type='checkbox'] + label:hover:after
  color #24c2cb
input[type='checkbox']:checked + label:after,
input[type='checkbox']:checked + label:hover:after
  color #fff


/*Toggle Specific styles*/
input[type='checkbox'].toggle {
  display: inline-block;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  width: 35px;
  height: 14px;
  background-color: #e8e8e8;
  position: relative;
  border-radius: 30px;
  box-shadow: inset 1px 1px 0px #dcdcdc !important
  transition: all .2s ease-in-out;

}
input[type='checkbox'].toggle:hover:after {
  background-color: #24c2cb;
}
input[type='checkbox'].toggle:after {
  content: '';
  display: inline-block;
  position: absolute;
  width: 10px;
  height: 10px;
  background-color: #24c2cb;
  top: 1.5px;
  left: 5px;
  border-radius: 50%;
  transition: all .2s ease-in-out;
  box-shadow 1px 1px 1px rgba(0,0,0,.15)
}
input[type='checkbox']:checked.toggle {
  box-shadow: inset 0 0 0 15px #e8e8e8;
}
input[type='checkbox']:checked.toggle:after {
  left: 20px;
  background-color: #24c2cb;
}
