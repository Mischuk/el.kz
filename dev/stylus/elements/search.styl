.search
  form
    position relative
    width 100%
    padding-left 30px
    padding-right 50px
    height 23px
  .inp-text
    height 100%
    border-radius 10px
    width 100%
    padding 0 20px
    font-size 12px
    font-weight 100
    border 1px solid $green
    display inline-block
    vertical-align middle
  .inp-submit
    position absolute
    right 10px
    top 50%
    display inline-block
    vertical-align middle
    height 23px
    width 43px
    margin-top -(@height/2)
    border none
    background url(../images/search.png) 50% 50% no-repeat