/*! Index page */
.lead-image
  height 225px
  margin-bottom 35px
  background-repeat no-repeat
  background-position 50% 50%
  background-size cover
.lead-news
  .item
    clearfix()
  .news-item
    position relative
    width 22.75%
    height 205px
    float left
    margin-left 3%
    margin-bottom 3%
    border 1px solid $gray-bd
    border-radius 10px
    overflow hidden
    &:nth-child(4n+1)
      margin-left 0
      clear left
    .tag
      position absolute
      bottom 10px
      left 0
      color #fff
      z-index 10
      padding-left 10px
      padding-right 10px
      min-height 18px
      line-height 18px
      background-color $blue-rgba
      &.blue
        background-color $blue-rgba
      &.green
        background-color $green-rgba
      &.yellow
        background-color $yellow-rgba
    .main-link
      display block
      width 100%
      height 100%
    .title
      height 70px
      background-color #f5f5f5
      padding 12px 15px
      color $black
      font-weight 500
      font-size 13px
      line-height 1.2
      overflow hidden
      span
        display inline-block
        max-height 3.7em
        overflow hidden
      &:hover span
        text-decoration underline
    .image
      height 135px
      width 100%
      background-repeat no-repeat
      background-position top center
      background-size cover
.lead-projects
  margin-bottom 0 !important
.my-flipster
  position relative
  padding-top 50px
  top -50px
  ul
    width 100%
    height 265px !important
  .flipster__item__content
    height 100%
  li
    position relative
    width 50%
    height 240px
    box-shadow none
    &:before
      content ''
      position absolute
      left 0
      bottom 8px
      width 100%
      height 50px
      transition box-shadow 0s ease-out
      transition-delay 0s
      box-shadow 0 0px 0px 0px rgba(0, 0, 0, 0)
    &.shadow
      &:before
        transition box-shadow .65s ease-in
        box-shadow 0 25px 20px -8px rgba(0, 0, 0, .6)
    a
      position relative
      z-index 20
      display block
      width 100%
      height 100%
    .description
      position absolute
      left 20px
      bottom 20px
      width 100%
      p
        margin 0
        font-size 36px
        font-weight 700
        color #fff
        span
          display block
          font-size 26px
          font-weight 400
    .image
      width 100%
      height 100%
      background-repeat no-repeat
      background-position top center
      background-size cover
    &.flipster__item--future
      .description
        text-align right
        padding-right 7%
.lead-video,
.lead-photos
  position relative
  .item
    a
      position relative
      display block
    .image
      height 120px
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
      border-radius 10px
    .footer
      position absolute
      top 85px
      left 0
      width 100%
      height 35px
      line-height 35px
      font-size 10px
      font-weight 500
      background-color $black-rgba
      border-bottom-left-radius 10px
      border-bottom-right-radius 10px
      color #fff
      cursor default
      padding-left 15px
      padding-right 15px
    .title
      color $black
      font-size 13px
      font-weight 500
      display inline-block
      padding 10px 5px
      &:hover
        text-decoration underline
.lead-tabs
  clearfix()
.lead-articles,
.lead-blogs
  position relative
  width 48%
  .header
    position absolute
    left 120px
    top 0
    span
      display inline-block
      margin-right 30px
      a
        font-size 13px
        color $black
        line-height 1
        &.current
          border-bottom 2px solid $violet
  .item
    margin-bottom 30px
  .item a p
    margin 0
    color $black
    font-size 13px
    font-weight 500
    line-height 1.2
    margin-bottom 10px
    padding-top 15px
    &:hover
      text-decoration underline
  .top-list
    display none
  .list
    padding-right 50px
.lead-articles
  float left
.lead-blogs
  float right
  .item
    position relative
    padding-left 60px
    padding-top 15px
    a p
      padding-top 0
  .user
    position absolute
    left 0
    top 0
.lead-review
  .item
    position relative
    background-color #f5f5f5
    border 1px solid $gray-bd
    border-radius 10px
    height 205px
    overflow hidden
    .image
      height 75px
      margin-bottom 40px
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
    p
      display block
      margin 0
      padding-left 15px
      padding-right 15px
      color $black
      max-height 4em
      overflow hidden
      &:hover
        text-decoration underline
    .footer
      position absolute
      left 15px
      bottom 15px
    .user-details
      height 35px
      position absolute
      left 5px
      top 50px
      .user
        border 1px solid $gray-bd
      .user, .user-name
        display inline-block
        vertical-align middle
      .user-name
        line-height 35px
        padding-top 15px
        position relative
        top 5px
        a
          color $black
          &:hover
            text-decoration underline
.our-projects
  .item
    height 55px
    line-height 55px
    a
      display block
      width 100%
      height 100%
      text-align left
      img
        display inline-block
        vertical-align middle
        width auto
        smooth()
.lead-calendar
  display none
  clearfix()
  .calendar
    width 40%
    float left
    .datepicker
      width 100%
    .datepicker--cell.events
      text-decoration underline
    .datepicker--cell.-selected-
      background none
      color $black
    .datepicker--cell.-selected-.events
      box-shadow inset 0 0 0 2px #b38b1d
      border-radius 50%
      color #b38b1d
      text-decoration underline
      background none
    .datepicker--nav-title
      font-weight 500
      font-size 16px
      text-transform uppercase
  .calendar-events
    width 60%
    float left
    padding-left 5%
    .event
      margin-bottom 30px
    .title
      font-weight 700
      font-size 14px
      margin-bottom 10px
    .description
      font-weight 100
      font-size 14px
.mobile-nav,
.mobile-menu-trigger
  display none
.mobile-menu-trigger {
  cursor: pointer;
  padding: 12px 0;

  span {
    position: relative;
    display: block;
    width: 20px;
    height: 4px;
    background: #222;
    transition: all .2s ease-in-out;

    &:before, &:after {
      position: absolute;
      background: #222;
      content: '';
      width: 20px;
      height: 4px;
      transition: all .2s ease-in-out;
    }

    &:before {
      top: -8px;
    }

    &:after {
      top: 8px;
    }
  }
}

.mobile-menu-trigger.active {
  span {
    background: transparent;

    &:before {
      transform: rotate(45deg) translate(5px, 6px);
    }

    &:after {
      transform: rotate(-45deg) translate(5px, -6px);
    }
  }
}
.calendar-trigger,
.lead-tabs-mobile-triggers
  display none
.desktop-version
  display none

