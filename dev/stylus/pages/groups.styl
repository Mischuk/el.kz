.content
  .sidebar-groups
    display none
.group-posts
  .total-post
    font-size 18px
    color #082e41
    font-weight 500
    margin-bottom 30px
.group-post
  margin-bottom 20px
  &:last-child
    margin-bottom 0
  .date
    margin-bottom 20px
    font-weight 100
    font-size 14px
    line-height 1
    color #565656
  .post-header
    height 45px
    line-height 45px
    margin-bottom 25px
    clearfix()
    .icon, .info
      float left
    .icon
      width 45px
      height 45px
      margin-right 20px
      line-height 37px
      border-radius 50%
      border 1px solid #3eb5f1
      overflow hidden
      a
        display block
        width 100%
        height 100%
        text-align center
        background-repeat no-repeat
        background-position 50% 50%
        background-size cover
    .info
      .author-post
        font-size 14px
        font-weight 500
        color #082e41
        margin-right 5px
        &:hover
          text-decoration underline
      span
        font-weight 100
        cursor default
  .post-body
    position relative
    padding-left 115px
    margin-bottom 20px
    article
      background-color #f5fafd
      padding 20px 35px 35px 35px
      h4
        font-weight 700
        color #082e41
        font-size 14px
      p
        font-weight 100
        color #565656
        font-size 14px
        line-height 1.2
        text-indent 30px
        a
          color #5b93bc
          text-decoration underline
          &:hover
            color $black
      .attached
        table.images
          width 100%
          table-layout fixed
          a
            display block
            width 100%
            height 100%
            background-repeat no-repeat
            background-position 50% 50%
            background-size cover
            img
              width 100%
          .image
            height 85px
            padding-right 20px
        &.full
          .image
            height 230px !important
    .type-icon
      position absolute
      left 70px
      top 0
      &:before
        content ''
        width 1px
        height 30px
        background-color #b5b5b5
        position absolute
        left -40px
        top -12px
      &:after
        content ''
        width 30px
        height 1px
        background-color #b5b5b5
        position absolute
        left -40px
        top 50%
        margin-top -(@height/2)
      a
        position relative
        display block
        width 35px
        height 35px
        line-height 31px
        text-align center
        border 2px solid #818181
        border-radius 50%
        &:after
          content ''
          position absolute
          left 50%
          top 50%
      &.edit a:after
        background: url('../images/sprite.png') no-repeat -30px -96px;
        width: 16px;
        height: 16px;
        margin-left -(@width/2)
        margin-top -(@height/2)
      &.communities a:after
        background: url('../images/sprite.png') no-repeat -380px -451px;
        width: 20px;
        height: 16px;
        margin-left -(@width/2)
        margin-top -(@height/2)
      &.friend a:after
        background: url('../images/sprite.png') no-repeat -463px -451px;
        width: 15px;
        height: 16px;
        margin-left -(@width/2)
        margin-top -(@height/2)
      &.notes a:after
        background: url('../images/sprite.png') no-repeat -410px -451px;
        width: 15px;
        height: 16px;
        margin-left -(@width/2)
        margin-top -(@height/2)
      &.audio a:after
        background: url('../images/sprite.png') no-repeat -436px -451px;
        width: 16px;
        height: 16px;
        margin-left -(@width/2)
        margin-top -(@height/2)
  .post-footer
    text-align right
    color $black
    font-weight 100
    > div
      position relative
      display inline-block
      margin-left 20px
      padding-left 20px
      cursor default
    a
      position relative
      color $black
      font-weight 100
      &:hover
        font-weight 500
.content > article
  font-size 14px
.article-list
  width 85%
  margin 0 auto
  background-color #f5f5f5
  padding 20px 85px
  ul
    padding-top 20px
  li
    margin-bottom 15px
.user-comments
  > section
    border 1px solid $gray-bd
    padding 20px 30px
  .header
    h3,
    .custom-select
      display inline-block
      vertical-align top
      height 24px
      line-height 24px
    .custom-select
      margin-left 110px
.post-comment
  position relative
  padding-left 70px
  .user
    position absolute
    left 0
    top 0
  form
    width 100%
    margin-bottom 30px
    .inp-text
      width 100%
      padding-left 30px
      padding-top 15px
      padding-bottom 15px
      padding-right 30px
      border 1px solid #a1dab2
      font-size 14px
      line-height 1
      min-height 0
      margin-bottom 15px
      border-radius 5px
      &:hover, &:focus
        border-color #4eba6f
    .bottom-form
      clearfix()
    .upload-file, .send
      display inline-block
      vertical-align top
    .inp-submit
      height 30px
      line-height 30px
      border 1px solid #4eba6f
      background-color #4eba6f
      width 140px
      border-radius 5px
      margin-left 15px
      anim()
      &:hover
        background-color $yellow
        border-color $yellow
.user-comments-list
  position relative
  .user
    position absolute
    left 0
    top 0
  .item
    padding-left 70px
    .header
      margin-bottom 15px
    .body
      font-size 14px
      margin-bottom 15px
    .footer
      clearfix()
      > div
        float left
        margin-right 10px
      a
        position relative
        display inline-block
        vertical-align middle
        font-size 12px
        line-height 15px
        color $black
        padding-left 20px
        &:after
          content ''
          position absolute
          left 0
          top 50%
      .like a:after
        background: url('../images/sprite.png') no-repeat -136px -260px;
        width: 15px;
        height: 15px;
        margin-top -(@height/2)
      .dislike a:after
        background: url('../images/sprite.png') no-repeat -156px -260px;
        width: 16px;
        height: 15px;
        margin-top -(@height/2)
      .share a:after
        background: url('../images/sprite.png') no-repeat -179px -260px;
        width: 15px;
        height: 14px;
        margin-top -(@height/2)
  .user-name
    font-size 14px
    font-weight 700
    color #082e41
    margin-right 25px
    &:hover
      text-decoration underline
  .date
    font-weight 100
    cursor default
.group-list
  .item
    margin-bottom 60px
    clearfix()
  .image
    width 30%
    height 130px
    float left
    background-repeat no-repeat
    background-position 50% 50%
    margin-right 3%
    &.blue
      border 1px solid #5b93bc
    &.green
      border 1px solid #9cb843
  .info
    position relative
    float left
    width 67%
    height 130px
    padding-bottom 25px
    .title
      display inline-block
      color #082e41
      font-size 18px
      line-height 1
      font-weight bold
      height 43px
      max-height 43px
      overflow hidden
      &:hover
        text-decoration underline
    .intro
      max-height 4em
      font-size 12px
      line-height 1
      overflow hidden
  .footer
    position absolute
    left 0
    bottom 0
    clearfix()
    .author,
    .date,
    .members
      float left
      margin-right 15px
      font-size 12px
      line-height 12px
    .author a
      font-size 12px
      line-height 12px
      color #082e41
      font-weight 500
      &:hover
        text-decoration underline
    .date, .members
      padding-left 15px
      position relative
      cursor default
      &:after
        content ''
        width: 12px;
        height: 12px;
        position absolute
        left 0
        top 50%
        margin-top -(@height/2)
    .date:after
      background: url('../images/sprite.png') no-repeat -214px -24px;
    .members:after
      background: url('../images/sprite.png') no-repeat -214px -47px;
.lead-article
  position relative
  height 205px
  margin-bottom 30px
  background-repeat no-repeat
  background-position 50% 50%
  background-size cover
  margin-top -40px
  h3
    color #fff
    position absolute
    left 45px
    bottom 25px
    font-size 24px
    font-weight bold
    padding-right 50px

