.sidebar,
.audio-post
  #mediawrapper
    opacity 0
    anim()
    &.loaded
      opacity 1
    *
      outline none
  .mejs-container,
  .mejs-playlist
    width 100% !important
  .mejs-playlist
    height auto !important
    ul
      padding 0
    li
      color #082e41
      padding-left 40px
      padding-right 10px
      font-size 12px
      line-height 12px
      height 40px
      transition background .25s ease-in
      padding-top 12px
      &:hover
        background-color #fff3c2
      &.current
        height 60px
        padding-left 80px
        background-color #fff3c2
        .pp
          margin-top -20px
  .mejs-container .mejs-controls
    top 0
    height 0
  .mejs-mediaelement,
  .mejs-time
    display none !important
  .mejs-controls
    *
      height 0 !important
    button
      visibility hidden !important
  .mejs-container
    background none
    height auto !important
  .mejs li
    button.pp
      background: url('../images/sprite.png') no-repeat -69px -260px;
      width: 13px;
      height: 16px;
    &.paused button.pp
      background: url('../images/sprite.png') no-repeat -6px -260px;
    button.prev
      background: url('../images/sprite.png') no-repeat -22px -260px;
      width: 17px;
      height: 12px;
    button.next
      background: url('../images/sprite.png') no-repeat -46px -260px;
      width: 16px;
      height: 12px;
  .mejs-time-float
    display none !important
  .mejs-controls div.mejs-time-rail
    width 90% !important
    margin-left 5%
    height 5px !important
    padding-top 0
    outline none
  .mejs-controls .mejs-time-rail .mejs-time-total,
  .mejs-controls .mejs-time-rail .mejs-time-current,
  .mejs-controls .mejs-time-rail .mejs-time-loaded
    height 5px !important
    border-radius 5px !important
  .mejs-controls .mejs-time-rail .mejs-time-total
    background: #f3dc7b;
  .mejs-controls .mejs-time-rail .mejs-time-current
    background: #e4c335
  .mejs-controls .mejs-time-rail .mejs-time-loaded
    background:#E9BF06;
    opacity 0 !important
.no-supports
  #sb-users
    position relative
    z-index 20
    display inline-block
    width 37px
    height 16px
    opacity 0
  .sidebar-users
    form
      position relative
      &:after
        content ''
        background: url('../images/sb-users.png') no-repeat 0 0;
        width: 37px;
        height: 16px;
        position absolute
        left 63px
        top 1px
      &.active:after
        background-position 0 -25px
.dropit
  list-style none
  padding 0
  margin 0

.dropit .dropit-trigger { position: relative; }
.dropit .dropit-submenu {
    position: absolute;
    top: 100%;
    left: 0; /* dropdown left or right */
    z-index: 1000;
    display: none;
    min-width: 150px;
    list-style: none;
  padding: 0;
  margin: 0;
}
.dropit .dropit-open .dropit-submenu { display: block; }
.dropit-trigger a{color: $black}
.audio-post
  .mejs-time-rail
    top 35px !important
  .mejs-playlist li.current
    background-color #ebf5fb
  .mejs-controls .mejs-time-rail .mejs-time-current
    background-color #5b94bc
  .mejs-controls .mejs-time-rail .mejs-time-loaded,
  .mejs-controls .mejs-time-rail .mejs-time-total
    background-color #9ccae5
