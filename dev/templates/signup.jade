doctype html
html
  head
    title Регистрация
    include includes/head
  body
    .container
      include includes/header
      main
        //- a(href="#").desktop-version ПЕРЕЙТИ НА ПОЛНУЮ ВЕРСИЮ САЙТА
        section.content
          .signup
            .wrap
              .signup-form.large-form
                form#form-signup_v1(name='form-signup_v1', method='POST')
                  .f-group
                    .form-headling Основная информация
                    .field
                      label(for='signup_v1-userpic') <span class="req">*</span> Фотография на аватар:
                      .input
                        .upload-file
                          .icon-image
                          input(type="file" name="photo" data-validation="[NOTEMPTY]" data-validation-message='Выберите фотографию')
                          span Выбрать файл
                          i не больше 3 мб, в формате .JPG, .PNG
                    .field
                      label(for='signup_v1-username') <span class="req">*</span> Имя:
                      .input
                        input#signup_v1-username(name='signup_v1[username]' type='text' data-validation='[L>=2, L<=18, MIXED]', data-validation-message='Введите имя')
                    .field
                      label(for='signup_v1-usersurname') <span class="req">*</span> Фамилия:
                      .input
                        input#signup_v1-usersurname(name='signup_v1[usersurname]' type='text' data-validation='[L>=2, L<=18, MIXED]', data-validation-message='Введите фамилию')
                    .field
                      label(for='signup_v1-email') <span class="req">*</span> E-mail:
                      .input
                        input#signup_v1-email(name='signup_v1[email]', type='text', data-validation='[EMAIL]' data-validation-message='Введите корректный e-mail адрес')
                    .field
                      label(for='signup_v1-gender') Пол:
                      .input
                        label.radio-custom
                          input(name="signup_v1[gender]" type="radio" value="male")
                          span.icon
                          span.text мужской
                        label.radio-custom
                          input(name="signup_v1[gender]" type="radio" value="female")
                          span.icon
                          span.text женский
                    .field
                      label(for='signup_v1-password') <span class="req">*</span> Пароль:
                      .input
                        input#signup_v1-password(name='signup_v1[password]', type='password', data-validation='[L>=6]', data-validation-message='Пароль должен быть не меньше 6 символов')
                    .field
                      label(for='signup_v1-password-confirm') <span class="req">*</span> Подтвердите пароль:
                      .input
                        input#signup_v1-password-confirm(name='signup_v1[password-confirm]', type='password', data-validation='[V==signup_v1[password]]', data-validation-message='Пароли не совпадают')
